<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MarsTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorMarsPrimary</item>
    <item name="colorPrimaryDark">@color/colorMarsPrimaryDark</item>
    <item name="colorAccent">@color/colorMarsAccent</item>
</style>
    <style name="VenusTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorVenusPrimary</item>
        <item name="colorPrimaryDark">@color/colorVenusPrimaryDark</item>
        <item name="colorAccent">@color/colorVenusAccent</item>
    </style>

    <style name="EarthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorEarthPrimary</item>
        <item name="colorPrimaryDark">@color/colorEarthPrimaryDark</item>
        <item name="colorAccent">@color/colorEarthAccent</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E5E5E8</item>
    </style>

    <style name="PopupHorizontalDivider">
         <item name="android:layout_height">1dp</item>
        <item name="android:background">#B0B0B9</item>
    </style>


    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#E5E5E8</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="WidgetTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="PopupTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="PopupOptionsTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>
<style name="options_playImageStyle">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">20dp</item>
    <item name="android:layout_marginEnd">8dp</item>
    <item name="android:layout_marginStart">8dp</item>
    <item name="android:layout_marginTop">4dp</item>
    <item name="android:src">@drawable/ic_action_play_arrow</item>
</style>


</resources>
