<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".options"
    android:background="@drawable/popup_border"
    android:id="@+id/cstlOptions">
    <!-- android:background="#B0FF57"-->

    <TextView
        android:id="@+id/tv50Coins"
        style="@style/PopupOptionsTextStyle"
        android:layout_width="80dp"
        android:layout_height="24dp"

        android:text="50 Coins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vwH1"
        style="@style/PopupHorizontalDivider"
        android:layout_width="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv50Coins" />


    <TextView
        android:id="@+id/tv100Coins"
        style="@style/PopupOptionsTextStyle"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:text="100 Coins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vwH1" />

    <View
        android:id="@+id/vwH2"
        style="@style/PopupHorizontalDivider"
        android:layout_width="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv100Coins" />

    <TextView
        android:id="@+id/tv150Coins"
        style="@style/PopupOptionsTextStyle"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:text="150 Coins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vwH2" />

    <ImageView
        android:id="@+id/imageView50Coins"
        style="@style/options_playImageStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/tv50Coins"
        app:layout_constraintTop_toTopOf="parent"
         />

    <ImageView
        android:id="@+id/imageView100Coins"

        style="@style/options_playImageStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/tv100Coins"
        app:layout_constraintTop_toTopOf="@+id/vwH1"
         />

    <ImageView
        android:id="@+id/imageView150Coins"
        style="@style/options_playImageStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/tv150Coins"
        app:layout_constraintTop_toTopOf="@+id/vwH2"
         />

</android.support.constraint.ConstraintLayout>